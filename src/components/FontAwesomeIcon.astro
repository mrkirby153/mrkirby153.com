---
import { library, icon } from "@fortawesome/fontawesome-svg-core";
import type {
  IconDefinition,
  IconPrefix,
} from "@fortawesome/fontawesome-svg-core";

interface Props {
  icon: IconDefinition;
}

const { icon: iconProp } = Astro.props;

library.add(iconProp);

const faIcon = icon({ prefix: iconProp.prefix, iconName: iconProp.iconName });
---

<Fragment set:html={faIcon.html} />
