---
export type Item = {
  slug: string;
  title: string;
  summary: string;
};

interface Props {
  items: Item[];
}

const { items } = Astro.props;
---

<div>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    {
      items.map((item) => (
        <a class="p-4 border rounded-lg no-style" href={item.slug}>
          <h2 class="text-xl font-bold">
            <span class="hover:underline dark:hover:text-blue-400 text-blue-600 hover:text-blue-800 dark:text-blue-200 transition ease-in-out">
              {item.title}
            </span>
          </h2>
          <p class="text-sm">{item.summary}</p>
        </a>
      ))
    }
  </div>
</div>
