---
import profile from "@img/profile.jpg";
import { Image } from "astro:assets";

type Link = {
  href: string;
  text: string;
  match?: string;
};

const links = [
  {
    href: "/projects",
    text: "Projects",
  },
  {
    href: "/posts",
    text: "Posts",
  },
] satisfies Link[];
---

<nav class="mb-5">
  <div class="flex items-center">
    <a
      href="/"
      class="flex font-bold items-center mr-3 cursor-pointer text-black hover:text-black dark:text-white dark:hover:text-white hover:no-underline"
    >
      <Image
        src={profile}
        alt="Profile Picture"
        class="rounded-full mr-3"
        width="64"
        height="64"
      />
      <span>mrkirby153</span>
    </a>
    <ul class="flex space-x-4">
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-gray-600 hover:text-blue-900 dark:text-white dark:hover:text-blue-300"
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
