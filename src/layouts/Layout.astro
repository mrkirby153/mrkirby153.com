---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="mrkirby153.com" />
    <meta name="viewport" content="width=device-width" />
    <meta name="darkreader-lock" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="body">
    <div class="main-content">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html {
    @apply text-[1.2rem];
  }
  a {
    @apply hover:underline hover:text-blue-400 text-blue-200 transition ease-in-out;
  }
  p {
    @apply pt-1 pb-1;
  }
</style>

<style>
  .dark {
    background-color: rgb(48, 48, 48);
    color: white;
  }
  .main-content {
    padding-top: 4rem;
  }

  .body {
    max-width: 75%;
    margin-left: auto;
    margin-right: auto;
  }
</style>
